    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowJs": true,  // Permite arquivos .js
    "checkJs": false, // NÃ£o tenta validar o JS como TypeScript
    "moduleResolution": "node",
